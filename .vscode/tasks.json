{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Workspace: Install",
      "type": "shell",
      "command": "python -m venv .venv && .venv/bin/python -m pip install -r requirements.txt && npm install",
      "windows": {
        "command": "python -m venv .venv; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; .\\.venv\\Scripts\\python.exe -m pip install -r requirements.txt; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; npm install"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Workspace: Clean",
      "type": "shell",
      "command": "rm -rf .venv node_modules backend/__pycache__ backend/itsor/__pycache__",
      "windows": {
        "command": "if (Test-Path .venv) { Remove-Item .venv -Recurse -Force }; if (Test-Path node_modules) { Remove-Item node_modules -Recurse -Force }; Remove-Item backend/__pycache__, backend/itsor/__pycache__ -Recurse -Force -ErrorAction SilentlyContinue"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Backend: Start",
      "type": "shell",
      "command": "../.venv/bin/python -m uvicorn itsor.main:app --reload --host 0.0.0.0 --port 8000",
      "windows": {
        "command": "..\\.venv\\Scripts\\python.exe -m uvicorn itsor.main:app --reload --host 0.0.0.0 --port 8000"
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "servers"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "INFO:.*uvicorn",
          "endsPattern": "Application startup complete"
        }
      }
    },
    {
      "label": "Backend: Stop",
      "type": "shell",
      "command": "pkill -f 'uvicorn itsor.main:app' || true",
      "windows": {
        "command": "$pids = netstat -ano | Select-String ':8000' | ForEach-Object { (($_ -split '\\s+')[-1]) } | Sort-Object -Unique; foreach ($pid in $pids) { if ($pid -match '^[0-9]+$') { Stop-Process -Id $pid -Force -ErrorAction SilentlyContinue } }"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Start",
      "type": "shell",
      "command": "npm run frontend:dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "servers"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "ready in"
        }
      }
    },
    {
      "label": "Frontend: Stop",
      "type": "shell",
      "command": "pkill -f 'vite' || true",
      "windows": {
        "command": "$pids = netstat -ano | Select-String ':5173' | ForEach-Object { (($_ -split '\\s+')[-1]) } | Sort-Object -Unique; foreach ($pid in $pids) { if ($pid -match '^[0-9]+$') { Stop-Process -Id $pid -Force -ErrorAction SilentlyContinue } }"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Docs: Start",
      "type": "shell",
      "command": "../.venv/bin/python -m mkdocs serve --dev-addr 0.0.0.0:8001",
      "windows": {
        "command": "..\\.venv\\Scripts\\python.exe -m mkdocs serve --dev-addr 0.0.0.0:8001"
      },
      "options": {
        "cwd": "${workspaceFolder}/docs"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "servers"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "INFO.*-.*mkdocs",
          "endsPattern": "Serving on"
        }
      }
    },
    {
      "label": "Docs: Stop",
      "type": "shell",
      "command": "pkill -f 'mkdocs serve' || true",
      "windows": {
        "command": "$pids = netstat -ano | Select-String ':8001' | ForEach-Object { (($_ -split '\\s+')[-1]) } | Sort-Object -Unique; foreach ($pid in $pids) { if ($pid -match '^[0-9]+$') { Stop-Process -Id $pid -Force -ErrorAction SilentlyContinue } }"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
