# Local dev host/port settings for make targets
# HOST may be an IP address (recommended) or a resolvable hostname (e.g. localhost)
HOST=127.0.0.1

# Default range: 3000-3004
FRONTEND_PORT=3000
WEB_PORT=3001
BACKEND_PORT=3002
DOCS_PORT=3003
EXTRA_PORT=3004

# Backend app settings
BACKEND_ENV=local
BACKEND_DATABASE_URL=sqlite:///./backend/itsor.db
JWT_SECRET=dev-secret-change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_MINUTES=60
JWT_ISSUER=itsor-backend
JWT_AUDIENCE=itsor-clients
SESSION_COOKIE_NAME=itsor_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax
CORS_ALLOW_ORIGINS=http://127.0.0.1:5173,http://localhost:5173
CORS_ALLOW_ORIGIN_REGEX=^https?://(localhost|127\.0\.0\.1)(:\d+)?$
